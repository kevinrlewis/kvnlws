extends layout

block content
  - function getdate(seconds) { var date = new Date(seconds*1000); return ((date.getMonth() + 1) + '/' + date.getDate() + '/' + date.getFullYear()); }
  script(src='/scripts/post.js')
  div.container-fluid#postcontainer
    div.alert.alert-info#post(style='border-radius: 0; border-color: #bee5eb;')
      h3 init
      p Welcome to my blog! Access different information using the links above. You can access my jobtrakr website at https://jobtrakr.kvnlws.xyz .
    if blogposts == undefined
      label Error retrieving posts.
    else
      each item, index in blogposts
        div.alert.alert-dark#post
          h3=item.subject + ' '
            small(style="font-size: 55%;")=getdate(item.date)
          p=item.content
      
  div.container-fluid(style="padding-bottom: 2%; padding-top: 2%;")
    form.border.border-danger#blogpostform
      div.form-group(style="padding: 2%; margin: 0px;")
        div.container-fluid
          div.row
            input.col-5(type="subject"
                  class="form-control" 
                  id="subjectInput"
                  aria-describedby="subjectHelp" 
                  placeholder="Enter subject")
            input.offset-1.col-3#hashpermission(type="hash"
                  class="form-control" 
                  placeholder="Hash permission")
            button.offset-1.col-2.btn.btn-primary#postsubmit(
                  type="submit"
                  style="padding: 2px; border-radius: 0; float: right; margin-bottom: inherit;"
                  onclick="submitPost()") Submit
          br
          div.row
            textarea.col-12(class="form-control" 
                  id="postInput"
                  rows="3"
                  style="resize: none;")
            
        
    
    
